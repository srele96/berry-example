{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "CommonJS",
    "noEmit": true,
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
